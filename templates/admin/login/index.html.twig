{% extends 'admin/base.html.twig' %}

{% block adminBody %}
    <body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                {% if error %}
                    <div class="card mt-5 py-3 border-bottom-danger">
                        <div class="card-body">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    </div>
                {% endif %}

                <div class="card o-hidden border-0 shadow-lg my-5">

                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block" style="background-image: url('{{ asset('build/images/crying-cat.jpg') }}')"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">{{ 'user.login'|trans([], 'admin') }}</h1>
                                    </div>
                                    <form class="user" action="{{ path('admin_login') }}" method="post">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user"
                                                   id="username" name="_username" value="{{ last_username }}"
                                                   placeholder="{{ 'user.name'|trans([], 'admin') }}"/>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                   id="password" name="_password"
                                                   placeholder="{{ 'user.password'|trans([], 'admin') }}">
                                        </div>

                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                        <input type="hidden" name="_target_path" value="{{ path('app_admin_index') }}"/>

                                        <button class="btn btn-primary btn-user btn-block" type="submit">
                                            {{ 'user.login'|trans([], 'admin') }}
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    </body>
{% endblock %}