<div class="card mt-4 card-body shadow-sm">
{{ form_start(form) }}
    {{ form_errors(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.titleJap) }}
    {{ form_row(form.token) }}
    {{ form_row(form.startYear) }}
    {{ form_row(form.endYear) }}
    {{ form_row(form.episodeNumber) }}
    {{ form_row(form.officialSiteUrl) }}
    {{ form_row(form.animeNewsNetworkId) }}
    {{ form_row(form.aniDbId) }}
    {{ form_row(form.myAnimeListId) }}
    {{ form_row(form.releaseResolution) }}
    {{ form_row(form.projectVideoQuality) }}
    {{ form_row(form.projectStatus) }}
    {{ form_row(form.projectType) }}
    {{ form_row(form.fansubTeam) }}
    {{ form_row(form.coverImage) }}

    {% if project.coverImage %}
    <div class="mb-3 row">
        <label class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <img src="{{ asset('uploads/projects/' ~ project.coverImage) }}" alt="{{ project.coverImage }}">
        </div>
    </div>
    {% endif %}

    <button class="btn btn-success btn-icon-split">
        <span class="icon text-white-50">
            <i class="fa fa-floppy-o" aria-hidden="true"></i>
        </span>
        <span class="text">{{ button_label|default('button.save')|trans([], 'admin') }}</span>
    </button>
{{ form_end(form) }}
</div>