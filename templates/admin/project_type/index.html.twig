{% extends 'admin/dashboard.html.twig' %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Token</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project_type in project_types %}
            <tr>
                <td>{{ project_type.id }}</td>
                <td>{{ project_type.token }}</td>
                <td>{{ project_type.name }}</td>
                <td>
                    <a href="{{ path('app_admin_project_type_show', {'id': project_type.id}) }}">show</a>
                    <a href="{{ path('app_admin_project_type_edit', {'id': project_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_project_type_new') }}">Create new</a>
{% endblock %}
